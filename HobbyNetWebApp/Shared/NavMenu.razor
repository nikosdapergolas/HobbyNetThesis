<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HobbyNetWebApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <MudNavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </MudNavLink>
        </div>     
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <MudNavLink class="nav-link" href="posts">
                        <span class="oi oi-list" aria-hidden="true"></span> Posts
                    </MudNavLink>
                </div>
                <div class="nav-item px-3">
                    <MudNavLink class="nav-link" href="verifyauth">
                        <span class="oi oi-check" aria-hidden="true"></span> Verify
                    </MudNavLink>
                </div>
                <div class="nav-item px-3">
                    <MudNavLink class="nav-link" href="logout">
                        <span class="oi oi-account-logout" aria-hidden="true"></span> Logout
                    </MudNavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <MudNavLink class="nav-link" href="login">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Login
                    </MudNavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>
