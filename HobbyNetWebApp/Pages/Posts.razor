@page "/posts"
@inject IPostsService postsService
@inject IConfiguration config
@inject IModalService modalService
@attribute [Authorize]

<div class="container">
    <h2>Today's Posts!</h2>
    <button class="btn btn-secondary" @onclick="@(() => modalService.Show<PostModal>("Write your Post here:"))">Add new</button>
    <br />
    <br />
    
    @foreach(var item in posts)
    {
        <div class="card">
            <div class="card-header">
                <img src="@image" width="50px" height="50px" />
                <h4><b>@item.Username</b></h4>
                <p>@item.timestamp</p>
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.body</h5>
            </div>
        </div>
        <br />
    }
</div>

@code {
    List<Post> posts = new();
    string image = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            image = config.GetValue<string>("api") + "/images/default.jpg";

            // See all users in console
            posts = await postsService.GetPosts();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}
