@page "/posts"
@inject IPostsService postsService
@inject IConfiguration config
@inject IModalService modalService
@attribute [Authorize]

<div class="container">
    <h2>Today's Posts!</h2>
    <button class="btn btn-secondary" @onclick="@(() => modalService.Show<PostModal>("Write your Post here:"))">Add new</button>
    <br />
    <br />
    
    @foreach(var item in posts)
    {
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-1">
                        <img class="figure-img" src="@image" width="70px" height="70px" />
                    </div>
                    <div class="col-md-11">
                        <h4 class="top"><b>@item.Username</b></h4>
                        <h6>@item.HobbyName</h6>
                        <h7>@item.timestamp</h7>
                    </div>                    
                </div>                
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.body</h5>
            </div>
        </div>
        <br />
    }
</div>

@code {
    List<Post> posts = new();
    string image = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            image = config.GetValue<string>("api") + "/images/default.jpg";

            // See all users in console
            posts = await postsService.GetPosts();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}
